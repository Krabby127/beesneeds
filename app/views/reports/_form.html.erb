<%= form_for(@report) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Which block is this report for?' %><br>
    <%= f.collection_select :block_id, Block.where(:user_id => current_user.id), :id, :block_number, :prompt => false  %>
  </div>

  <div class="field">
    <%= f.label 'Which date was the observation made on?' %><br>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label 'What activity would you like to report?' %><br>
    <%= f.select :activity, [['New plug', 'new'], ['Change in plug', 'change'], ['Something other than plug in tunnel', 'other'], ['Miscellaneous observation', 'other'], ['No activity', 'none']] %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
